    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": "build",
            "presentation": { "clear": true }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "make all",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": { "clear": true }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make flash",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": "build",
            "presentation": { "clear": true }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": "build",
            "presentation": { "clear": true }
        },
        {
            "label": "reset",
            "type": "shell",
            "command": "make reset",
            "group": "build",
            "presentation": { "clear": true }
        }
    ]
}